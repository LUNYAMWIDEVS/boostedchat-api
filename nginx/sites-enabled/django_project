server {
    listen 80;
    listen [::]:80;
    server_name api.booksy.us.boostedchat.com;
    location / {
        rewrite ^ https://$host$request_uri? permanent;
    }
}


server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name api.booksy.us.boostedchat.com;
    charset utf-8;

    ssl_certificate /etc/letsencrypt/live/api.booksy.us.boostedchat.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.booksy.us.boostedchat.com/privkey.pem;
    
    location ~ /.well-known  {
        allow all;
    }

    location /static/ {
        alias /www/static/;
    }

    location / {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
